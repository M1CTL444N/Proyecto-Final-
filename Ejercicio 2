#include <stdio.h>

void imprimirVotos(int v[]);
int obtenerMayor(int v[]);
int obtenerSegundoMayor(int v[], int mayor);

int main() {
    int votos[10] = {5,2,3,6,0,3,3,2,0,0};
    int mayor, segundo;

    imprimirVotos(votos);

    mayor = obtenerMayor(votos);
    segundo = obtenerSegundoMayor(votos, mayor);

    printf("\n1a canci칩n m치s votada: %d\n", mayor);
    printf("2a canci칩n m치s votada: %d\n", segundo);

    return 0;
}
void imprimirVotos(int v[]) {
    int i;
    for(i = 0; i < 10; i++) {
        printf("Cancion %d: %d votos\n", i, v[i]);
    }
}
int obtenerMayor(int v[]) {
    int i, mayor = 0;
    for(i = 1; i < 10; i++) {
        if(v[i] > v[mayor]) {
            mayor = i;
        }
    }
    return mayor;
}

int obtenerSegundoMayor(int v[], int mayor) {
    int i, segundo = (mayor == 0 ? 1 : 0);

    for(i = 0; i < 10; i++) {
        if(i != mayor && v[i] > v[segundo]) {
            segundo = i;
        }
    }
    return segundo;
}
