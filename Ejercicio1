#include <stdio.h>

int main(void) {
    int votos[100][3];
    int n = 0;
    int a, b, c;

    printf("Introduce tríos de votos (primer valor -1 para terminar).\n");

    // Leemos el primer número del trío
    if (scanf("%d", &a) != 1) return 0;

    while (a != -1 && n < 100) {
        // Leer los dos siguientes valores del trío
        if (scanf("%d %d", &b, &c) != 2) {
            // Si faltan datos, salir con mensaje
            printf("Entrada incompleta. Terminando.\n");
            break;
        }

        votos[n][0] = a;
        votos[n][1] = b;
        votos[n][2] = c;
        n++;

        if (n >= 100) {
            printf("Se alcanzo el maximo de 100 oyentes.\n");
            break;
        }

        // Pedir siguiente trío (lee el siguiente primer valor)
        if (scanf("%d", &a) != 1) {
            // EOF o error
            break;
        }
    }

    // Mostrar los resultados almacenados
    printf("\nSe almacenaron %d oyentes. Lista de votos:\n", n);
    for (int i = 0; i < n; i++) {
        printf("Oyente %d: %d %d %d\n", i, votos[i][0], votos[i][1], votos[i][2]);
    }

    return 0;
}
